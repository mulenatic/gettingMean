extends layout

include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-6
        h1 Loc8r
          small &nbsp;#{pageHeader.strapline}
    .row
      .col-xs-12.col-sm-8(ng-controller="locationListCtrl")
        .error {{ message }}
        .row.list-group
          .col-xs-12.list-group-item(ng-repeat="location in data.locations")
            h4
              a(href='/location/{{location._id}}') {{ location.name }}
              small {{location.rating}}
              span.badge.pull-right.badge-default {{ location.distance | formatDistance }}
            p.address {{ location.address }}
            p
              span.label.label-warning.label-facility(ng-repeat="facility in location.facilities")
                | {{ facility }}
      .col-xs-12.col-sm-4
        p.lead Looking for wifi an a seat? Loc8r helps you find places to work when out and about. Perhaps with coffee, case or a pint? Let Loc8r help you find the place you're looking for.